#надо "база.ср"
#надо "../../перечни/ряд/пласт.ср"

фц читатьфп(из: стр) (стр, ч32) (
	файл есть ч32 = открытьф(из, ФлагиФйлв.Чтение, 0),
	файл < 0 ?? ( воздать (0, 0) )

	длиной есть ч64 = файл.идтиф(0, ФайлОт.Конца),
	текст есть стр = пластом(длиной + 1),

	файл.идтиф(0, ФайлОт.Начала),
	файл.читатьф(текст, длиной),

	текст[длиной] = 0,
	файл.закрытьф(),

	воздать (текст, длиной)
)
