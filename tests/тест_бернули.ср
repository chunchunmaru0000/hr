#буки (# для #результат# от #от# по #циклу# пусть #действие#. #) (#
	результат = от,
	циклу ( действие ),
#)

фц факториал(н: ч32) ч64 (
	н < 2 ?? ( воздать 1 )
	пусть ( ь: ч32 ответ: ч64 )
	для ответ от 1 по ь => (2 ..= н) пусть ответ *= ь.
	воздать ответ,
)

фц чето_комбинаторика(м р: ч64) ч64 (
	воздать факториал(м) / (факториал(р) * факториал(м - р))
)

фц бернули(н: ч32) в64 (
	н == 0 ?? ( воздать 1 )
	н == 1 ?? ( воздать -0.5 )

	пусть ( к: ч32 ответ: в64 )

	для ответ от 0 по к => (0 ... н) пусть
		ответ += бернули(к) * чето_комбинаторика(н + 1, к).
	воздать ответ * (-1.0 / (н + 1))
)

фц __ВХОД глав(аргов: ч32 арги: *стр) тлен (
	пусть ( р: лик ПРяд ь: ч32 в: в64 )

	() |> начать_пласт,
	р = новый_пряд(18 * мера в64),

	ь => (0 ... 18) ( р.добавить64(буквально ч64 бернули(ь)), )
	ь => (0 ... 18) (
		вещать..("рБ.", ь, ": [", бернули(ь), "][", буквально в64 р.звено64(ь), "]\n"),
	)

	выйти с кодом 77 .

)

;;
фц че() (ч8, ч16, ц32, стр, ч32, ц16, ц8) (
	пусть ( а б в д е ё: ч32  г: стр )
	(а, б) = (б, а),
	(а, 0) = (б, а),
	(0, б) = (б, а),
	(0, 0) = (б, а),
	(а, 0, в, г, 0, е, ё) = че(),
	(а, 0, в, г, 0, е) = че2(),
	воздать (1, 2, 3, 0, 5, 6, 7)
)
фц че2() (ч8, ч16, ц32, стр, ч32, ц16) (
	пусть ( а: ч32 аа: *ч32 б: ч64 в: в32 вв: в64 )

	а = а + аа,
	а = аа + а,
	а = аа + б,
	а = б + аа,
	а = а + а,
	а = (аа + (2 + 1)) + 0,
	а = (аа + (2 + 1)) + 0,
	(а, б) = (10., в),
	(а, б) = (10., 11.)

	воздать (1, 2, 3, 0, 5, 6.)
)
;;
