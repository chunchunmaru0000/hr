#влечь (
	"выход.ср"
	"../б/ввыв/консоль/всё.ср"
)

#буки (# для #результат# от #от# по #циклу# пусть #действие#. #) (#
	результат = от,
	циклу ( действие ),
#)

фц факториал(н: ч32) ч64 (
	н < 2 ?? ( воздать 1 )
	пусть ( ь: ч32 ответ: ч64 )
	для ответ от 1 по ь => (2 ..= н) пусть ответ *= ь.
	воздать ответ,
)

фц чето_комбинаторика(м р: ч64) ч64 (
	воздать факториал(м) / (факториал(р) * факториал(м - р))
)

фц бернули(н: ч32) в64 (
	н == 0 ?? ( воздать 1 )
	н == 1 ?? ( воздать -0.5 )

	пусть ( к: ч32 ответ: в64 )

	для ответ от 0 по к => (0 ... н) пусть
		ответ += бернули(к) * чето_комбинаторика(н + 1, к).
	воздать ответ * (-1.0 / (н + 1))
)

_асм "вход глав глав:"
фц глав(аргов: ч32 арги: *стр) тлен (
	пусть ( ь: ч32 )
	ь => (0 ... 18) ( вещать..("Б." ь, ": ", бернули(ь), "\n"), )
	выйти с кодом 77 .
)

