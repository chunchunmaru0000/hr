#влечь (
	"выход.ср"
	"../б/ввыв/консоль/всё.ср"
	"../б/память/вторить.ср"
	"../б/память/пласт.ср"
)

_асм "вход глав глав:"
фц глав(аргов: ч32 арги: *стр) тлен (
	пусть ( ч1 ч2 ч3: *ч64 ч: ч64 )
	начать_пласт(0x1000),

	*(ч1 = пластом(0x1000)) = 1111,
	*(ч2 = пластом(0x1000)) = 2222,
	вещать..(*ч1, "[", (ч = ч1), "]\n"),
	вещать..(*ч2, "[", (ч = ч2), "]\n"),

	*(ч1 = пластом(0x1001)) = 3333,
	вещать..(__РАЗМЕР_ПЛАСТА, "\n"),
	*(ч2 = пластом(0x1012)) = 4444,
	вещать..(__РАЗМЕР_ПЛАСТА, "\n"),


	вещать..(*ч1, "[", (ч = ч1), "]\n"),
	вещать..(*ч2, "[", (ч = ч2), "]\n"),
	вещать("-----------------------\n"),

	ч3 = пластом(0x1001),
	вторить(ч1 ч3 0x1001),
	вторить(ч2 ч1 0x1001),
	вторить(ч3 ч2 0x1001),

	вещать..(*ч1, "[", (ч = ч1), "]\n"),
	вещать..(*ч2, "[", (ч = ч2), "]\n"),

	вещать("-----------------------\n"),
	вещать..(*ч1, "[", (ч = ч1), "]\n"),
	ч1 = пере_пласт(ч1 0x1001 0x1000),
	вещать..(*ч1, "[", (ч = ч1), "]\n"),
	ч1 = пере_пласт(ч1 0x1000 0x1002),
	вещать..(*ч1, "[", (ч = ч1), "]\n"),

	выйти с кодом 77 .
)

